{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "default": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "stream": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "default"
    },
    "file": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "filename": "app.log",
      "when": "midnight",
      "interval": 1,
      "backupCount": 7,
      "level": "DEBUG",
      "formatter": "default",
      "encoding": "utf-8"
    }
  },
  "loggers": {
    "uvicorn.error": {
      "level": "INFO"
    },
    "uvicorn.access": {
      "level": "INFO",
      "handlers": ["stream", "file"],
      "propagate": false
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
        "stream",
        "file"
    ]
  }
}
